load("//tools:defaults.bzl", "jasmine_node_test", "ng_e2e_test_library", "ng_module", "ng_test_library", "ts_library")
load("@io_bazel_rules_webtesting//web:web.bzl", "web_test")

package(default_visibility = ["//visibility:public"])

ng_module(
    name = "test_components",
    testonly = True,
    srcs = glob(
        ["**/*.ts"],
        exclude = [
            "**/*.spec.ts",
            "harnesses/**",
        ],
    ),
    assets = glob(["**/*.html"]),
    deps = [
        "//src/cdk/keycodes",
        "//src/cdk/platform",
        "@npm//@angular/forms",
    ],
)

ts_library(
    name = "test_harnesses",
    srcs = glob(["harnesses/**/*.ts"]),
    deps = [
        "//src/cdk/testing",
    ],
)

ng_test_library(
    name = "cross_environment_specs",
    srcs = ["cross-environment.spec.ts"],
    deps = [
        ":test_harnesses",
        "//src/cdk/testing",
    ],
)

ng_test_library(
    name = "unit_test_sources",
    srcs = glob(
        [
            "**/*.spec.ts",
        ],
        exclude = [
            "cross-environment.spec.ts",
            "**/*.e2e.spec.ts",
        ],
    ),
    deps = [
        ":cross_environment_specs",
        ":test_components",
        ":test_harnesses",
        "//src/cdk/platform",
        "//src/cdk/testing",
        "//src/cdk/testing/private",
        "//src/cdk/testing/testbed",
        "@npm//@angular/platform-browser",
        "@npm//kagekiri",
    ],
)

ng_e2e_test_library(
    name = "e2e_test_sources",
    srcs = glob(
        [
            "**/*.e2e.spec.ts",
        ],
        exclude = ["webdriver.e2e.spec.ts"],
    ),
    deps = [
        ":cross_environment_specs",
        ":test_harnesses",
        "//src/cdk/testing",
        "//src/cdk/testing/private",
        "//src/cdk/testing/protractor",
    ],
)

ts_library(
    name = "webdriver_test_lib",
    testonly = 1,
    srcs = ["webdriver.e2e.spec.ts"],
    deps = [
        ":cross_environment_specs",
        ":test_harnesses",
        "//src/cdk/testing",
        "//src/cdk/testing/webdriver",
        "@npm//@types/jasmine",
        "@npm//@types/node",
        "@npm//@types/selenium-webdriver",
    ],
)

jasmine_node_test(
    name = "webdriver_jasmine_node_test",
    data = [
        "@npm//:node_modules",
    ],
    tags = ["manual"],
    deps = [":webdriver_test_lib"],
)

web_test(
    name = "webdriver_web_test_chrome",
    browser = "@npm//@angular/dev-infra-private/browsers/chromium:chromium",
    tags = ["manual"],
    test = ":webdriver_jasmine_node_test",
)

sh_test(
    name = "webdriver_test_chrome",
    testonly = 1,
    srcs = ["webdriver-test.sh"],
    args = [
        "$(location //src/e2e-app:devserver)",
        "$(location :webdriver_web_test_chrome)",
    ],
    data = [
        ":webdriver_web_test_chrome",
        "//src/e2e-app:devserver",
    ],
    tags = ["manual"],  # TODO(mmalerba): Change to "e2e" once this works on CI.
    deps = ["@bazel_tools//tools/bash/runfiles"],
)
