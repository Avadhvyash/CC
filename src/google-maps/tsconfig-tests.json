{
  "extends": "../bazel-tsconfig-build.json",
  "references": [
    {
      "path": "../cdk/tsconfig-tests.json"
    }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../dist/packages/google-maps",
    "rootDir": ".",
    "rootDirs": [
      ".",
      "../../dist/packages/google-maps"
    ],
    "importHelpers": false,
    "module": "umd",
    "target": "es5",
    "types": ["jasmine"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@angular/cdk/*": ["../../dist/packages/cdk/*"]
    }
  },
  "include": [
    "**/*.spec.ts",
    "../dev-mode-types.d.ts"
  ],
  "exclude": [
    "**/*.e2e.spec.ts"
  ]
}
